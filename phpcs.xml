<?xml version="1.0"?>
<ruleset name="Shorty">
    <description>PSR-12 code style for Shorty</description>

    <rule ref="PSR12" />

    <file>link-service/api</file>

    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>

    <arg name="colors"/>
    <arg name="parallel" value="8"/>
    <arg name="cache" value=".phpcs-cache"/>
</ruleset>